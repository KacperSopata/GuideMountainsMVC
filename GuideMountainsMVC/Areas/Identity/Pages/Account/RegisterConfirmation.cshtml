@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Account Registration Confirmation";
    Layout = "_Layout";
      <!-- Jeżeli masz już używaną wspólną strukturę widoków, dodaj Layout -->
}

<div class="container text-center">
    <!-- Centering the content -->
    <h1>@ViewData["Title"]</h1>

    @if (@Model.DisplayConfirmAccountLink)
    {
        <p class="alert alert-info">
            Please confirm your account by clicking the link below:
        </p>
        <p>
            <a id="confirm-link" class="btn btn-secondary" href="@Model.EmailConfirmationUrl" style="color: white; background-color: #6c757d;">Confirm your account</a> <!-- Gray button -->
        </p>
    }
    else
    {
        <p class="alert alert-success">
            A confirmation link has been sent to your email. Please check your inbox to complete the registration process.
        </p>
    }

    <div class="mt-3">
        <a href="@Url.Page("/Login")" class="btn btn-primary">Back to Login</a> <!-- Blue button -->
    </div>
</div>
