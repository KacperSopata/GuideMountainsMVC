<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GuideMountains</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/zobaczymy.css" asp-append-version="true" /> <!-- Twój styl -->
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold fs-4" asp-area="" asp-controller="Home" asp-action="Index">GuideMountains</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-controller="MountainPlace" asp-action="Index">MountainPlaces</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-controller="SkiPass" asp-action="Index">SkiPass</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-controller="Accommodation" asp-action="Index">Accommodation</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-controller="EquipmentRental" asp-action="Index">EquipmentRental</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black fw-semibold" asp-controller="Reservation" asp-action="Index">Reservations</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Reservation" asp-action="MyReservations">My Reservations</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-controller="Weather" asp-action="Index">Weather</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-4">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
